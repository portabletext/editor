{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>sanity-io/renovate-config",
    ":dependencyDashboardApproval"
  ],
  "packageRules": [
    {
      "matchDepTypes": ["dependencies", "peerDependencies"],
      "rangeStrategy": "bump",
      "semanticCommitType": "fix"
    },
    {
      "matchDepTypes": ["devDependencies"],
      "matchPackageNames": ["@sanity/*", "react", "rxjs", "styled-components"],
      "rangeStrategy": "bump",
      "semanticCommitType": "fix"
    },
    {
      "matchPackageNames": ["@sanity/pkg-utils"],
      "semanticCommitType": "chore"
    },
    {
      "description": "Ensure internal and important packages open a PRs right away, without waiting for manual approval",
      "matchPackageNames": [
        "@sanity/*",
        "react",
        "rxjs",
        "slate",
        "slate-react",
        "styled-components",
        "typescript"
      ],
      "dependencyDashboardApproval": false,
      "schedule": ["every weekday"]
    }
  ]
}
