{
  "name": "playground",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -b && vite build",
    "check:lint": "biome lint .",
    "check:react-compiler": "eslint --cache .",
    "check:types": "tsc --noEmit --pretty --project tsconfig.app.json",
    "check:types:watch": "tsc --watch --project tsconfig.app.json",
    "clean": "del .turbo && del dist && del node_modules",
    "dev": "vite",
    "lint:fix": "biome lint --write .",
    "preview": "vite preview",
    "test:unit": "vitest --run",
    "test:unit:watch": "vitest"
  },
  "dependencies": {
    "@portabletext/block-tools": "workspace:*",
    "@portabletext/editor": "workspace:*",
    "@portabletext/keyboard-shortcuts": "workspace:*",
    "@portabletext/patches": "workspace:*",
    "@portabletext/plugin-markdown-shortcuts": "^1.0.16",
    "@portabletext/plugin-one-line": "^1.0.19",
    "@portabletext/toolbar": "workspace:*",
    "@xstate/react": "^6.0.0",
    "lucide-react": "^0.536.0",
    "react": "^19.1.1",
    "react-aria-components": "^1.11.0",
    "react-dom": "^19.1.1",
    "react-is": "^19.1.1",
    "remeda": "^2.28.0",
    "shiki": "^3.9.2",
    "xstate": "^5.21.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.12",
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "@types/react-is": "^19.0.0",
    "@vitejs/plugin-react": "^4.7.0",
    "babel-plugin-react-compiler": "19.1.0-rc.3",
    "eslint": "^9.34.0",
    "eslint-formatter-gha": "^1.6.0",
    "eslint-plugin-react-hooks": "6.0.0-rc.2",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^1.0.0",
    "tailwindcss": "^4.1.12",
    "tailwindcss-react-aria-components": "^2.0.0",
    "typescript": "catalog:",
    "typescript-eslint": "^8.41.0",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  }
}
