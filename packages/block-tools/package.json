{
  "name": "@portabletext/block-tools",
  "version": "4.0.0",
  "description": "Can format HTML, Slate JSON or Sanity block array into any other format.",
  "keywords": [
    "portable-text",
    "block-tools"
  ],
  "homepage": "https://www.sanity.io/",
  "bugs": {
    "url": "https://github.com/portabletext/editor/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/portabletext/editor.git",
    "directory": "packages/block-tools"
  },
  "license": "MIT",
  "author": "Sanity.io <hello@sanity.io>",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "default": "./lib/index.js"
    },
    "./rules": {
      "source": "./src/rules/_exports/index.ts",
      "default": "./lib/rules/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "build": "pkg-utils build --strict --check --clean",
    "check:lint": "biome lint .",
    "check:types": "tsc",
    "check:types:watch": "tsc --watch",
    "clean": "del .turbo && del lib && del node_modules",
    "dev": "pkg-utils watch",
    "lint:fix": "biome lint --write .",
    "prepublishOnly": "turbo run build",
    "test": "vitest --run",
    "test:unit": "vitest --run --project unit",
    "test:unit:watch": "vitest --project unit",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@portabletext/sanity-bridge": "workspace:^",
    "@portabletext/schema": "workspace:^",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@portabletext/test": "workspace:^",
    "@sanity/pkg-utils": "^9.0.1",
    "@sanity/schema": "^4.14.1",
    "@sanity/types": "^4.14.1",
    "@types/jsdom": "^20.0.1",
    "@types/lodash": "^4.17.20",
    "@vercel/stega": "0.1.2",
    "@vitest/coverage-v8": "^4.0.6",
    "jsdom": "^27.0.0",
    "typescript": "catalog:",
    "vitest": "^4.0.6"
  },
  "peerDependencies": {
    "@sanity/types": "^4.14.1"
  },
  "engines": {
    "node": ">=20.19 <22 || >=22.12"
  },
  "publishConfig": {
    "access": "public"
  }
}
