{
  "extends": "../../../tsconfig.settings",
  "include": ["./src"],
  "exclude": [
    "./src/**/__fixtures__/*",
    "./src/**/__mocks__/*",
    "./src/**/__workshop__/*",
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx"
  ],
  "compilerOptions": {
    "composite": true,
    // -- strictness options we need to disable in a transition period.
    "noImplicitAny": false,
    "strictNullChecks": false,
    // --
    "jsx": "react",
    "declarationDir": "./lib/dts/",
    "rootDir": "./",
    "outDir": "./lib/dts/"
  }
}
