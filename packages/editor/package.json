{
  "name": "@portabletext/editor",
  "version": "2.19.2",
  "description": "Portable Text Editor made in React",
  "keywords": [
    "sanity",
    "realtime",
    "content",
    "portable-text-editor",
    "structure",
    "collaborative",
    "editor",
    "text",
    "portable-text"
  ],
  "homepage": "https://www.sanity.io/",
  "bugs": {
    "url": "https://github.com/portabletext/editor/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/portabletext/editor.git",
    "directory": "packages/editor"
  },
  "license": "MIT",
  "author": "Sanity.io <hello@sanity.io>",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "default": "./lib/index.js"
    },
    "./behaviors": {
      "source": "./src/behaviors/_exports/index.ts",
      "default": "./lib/behaviors/index.js"
    },
    "./plugins": {
      "source": "./src/plugins/_exports/index.ts",
      "default": "./lib/plugins/index.js"
    },
    "./selectors": {
      "source": "./src/selectors/_exports/index.ts",
      "default": "./lib/selectors/index.js"
    },
    "./test": {
      "default": "./src/test/_exports/index.ts"
    },
    "./test/vitest": {
      "default": "./src/test/vitest/_exports/index.ts"
    },
    "./utils": {
      "source": "./src/utils/_exports/index.ts",
      "default": "./lib/utils/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "build": "pkg-utils build --strict --check --clean",
    "check:lint": "biome lint .",
    "check:react-compiler": "eslint --cache .",
    "check:types": "tsc",
    "check:types:watch": "tsc --watch",
    "clean": "del .turbo && del lib && del node_modules",
    "dev": "pkg-utils watch",
    "lint:fix": "biome lint --write .",
    "prepublishOnly": "turbo run build",
    "test": "vitest --run",
    "test:browser": "vitest --run --project browser",
    "test:browser:chromium": "vitest --run --project \"browser (chromium)\"",
    "test:browser:chromium:watch": "vitest --project \"browser (chromium)\"",
    "test:browser:firefox": "vitest --run --project \"browser (firefox)\"",
    "test:browser:firefox:watch": "vitest --project \"browser (firefox)\"",
    "test:browser:watch": "vitest --project browser",
    "test:browser:webkit": "vitest --run --project \"browser (webkit)\"",
    "test:browser:webkit:watch": "vitest --project \"browser (webkit)\"",
    "test:e2e:chromium": "vitest --run --project \"browser.bak (chromium)\"",
    "test:e2e:chromium:watch": "vitest --project \"browser.bak (chromium)\"",
    "test:unit": "vitest --run --project unit",
    "test:unit:watch": "vitest --project unit",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@portabletext/block-tools": "workspace:^",
    "@portabletext/keyboard-shortcuts": "workspace:^",
    "@portabletext/patches": "workspace:^",
    "@portabletext/schema": "workspace:^",
    "@portabletext/to-html": "^4.0.1",
    "@xstate/react": "^6.0.0",
    "debug": "^4.4.3",
    "immer": "^10.2.0",
    "lodash": "^4.17.21",
    "lodash.startcase": "^4.4.0",
    "react-compiler-runtime": "1.0.0",
    "slate": "0.118.1",
    "slate-dom": "^0.118.1",
    "slate-react": "0.118.2",
    "xstate": "^5.24.0"
  },
  "devDependencies": {
    "@portabletext/sanity-bridge": "workspace:*",
    "@portabletext/test": "workspace:^",
    "@sanity/diff-match-patch": "^3.2.0",
    "@sanity/pkg-utils": "^9.0.1",
    "@sanity/schema": "^4.14.1",
    "@sanity/types": "^4.14.1",
    "@types/debug": "^4.1.12",
    "@types/lodash": "^4.17.20",
    "@types/lodash.startcase": "^4.4.9",
    "@types/node": "^20",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/browser": "^4.0.6",
    "@vitest/browser-playwright": "^4.0.6",
    "@vitest/coverage-istanbul": "^4.0.6",
    "babel-plugin-react-compiler": "1.0.0",
    "eslint": "^9.38.0",
    "eslint-formatter-gha": "^1.6.0",
    "eslint-plugin-react-hooks": "7.0.1",
    "jsdom": "^27.0.0",
    "racejar": "workspace:*",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "rxjs": "^7.8.2",
    "typescript": "catalog:",
    "typescript-eslint": "^8.46.1",
    "vite": "^7.1.12",
    "vitest": "^4.0.6",
    "vitest-browser-react": "^2.0.2"
  },
  "peerDependencies": {
    "@portabletext/sanity-bridge": "workspace:^1.2.0",
    "@sanity/schema": "^4.14.1",
    "@sanity/types": "^4.14.1",
    "react": "^18.3 || ^19",
    "rxjs": "^7.8.2"
  },
  "engines": {
    "node": ">=20.19 <22 || >=22.12"
  },
  "publishConfig": {
    "access": "public"
  }
}
