    "eslint-plugin-react-hooks": "7.0.1",
    "react": "^19.2.0",
    "typescript": "catalog:",
    "typescript-eslint": "^8.46.1",
    "vitest": "^4.0.6"
  },
  "peerDependencies": {
    "@portabletext/editor": "workspace:^",
