{
  "name": "racejar",
  "version": "1.1.2",
  "description": "A testing framework agnostic Gherkin driver",
  "keywords": [
    "cucumber",
    "gherkin",
    "jest",
    "test",
    "vitest"
  ],
  "homepage": "https://www.sanity.io/",
  "bugs": {
    "url": "https://github.com/portabletext/editor/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/portabletext/editor.git",
    "directory": "packages/racejar"
  },
  "license": "MIT",
  "author": "Sanity.io <hello@sanity.io>",
  "sideEffects": false,
  "exports": {
    ".": {
      "default": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./jest": {
      "default": "./src/jest/index.ts",
      "types": "./src/jest/index.ts"
    },
    "./playwright": {
      "default": "./src/playwright/index.ts",
      "types": "./src/playwright/index.ts"
    },
    "./vitest": {
      "default": "./src/vitest/index.ts",
      "types": "./src/vitest/index.ts"
    }
  },
  "scripts": {
    "check:lint": "biome lint .",
    "check:types": "tsc",
    "lint:fix": "biome lint --write .",
    "test": "vitest --run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@cucumber/cucumber-expressions": "^18.0.1",
    "@cucumber/gherkin": "^31.0.0",
    "@cucumber/messages": "^27.2.0",
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.50.1",
    "@sanity/pkg-utils": "^7.0.4",
    "typescript": "5.7.3",
    "vitest": "^3.0.5"
  },
  "peerDependencies": {
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.50.1",
    "vitest": "^3.0.5"
  }
}
