{
  "name": "racejar",
  "version": "2.0.3",
  "description": "A testing framework agnostic Gherkin driver",
  "keywords": [
    "cucumber",
    "gherkin",
    "jest",
    "test",
    "vitest"
  ],
  "homepage": "https://www.sanity.io/",
  "bugs": {
    "url": "https://github.com/portabletext/editor/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/portabletext/editor.git",
    "directory": "packages/racejar"
  },
  "license": "MIT",
  "author": "Sanity.io <hello@sanity.io>",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "default": "./dist/index.js"
    },
    "./jest": {
      "source": "./src/jest/index.ts",
      "default": "./dist/jest/index.js"
    },
    "./playwright": {
      "source": "./src/playwright/index.ts",
      "default": "./dist/playwright/index.js"
    },
    "./vitest": {
      "source": "./src/vitest/index.ts",
      "default": "./dist/vitest/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pkg-utils build --strict --check --clean",
    "check:lint": "biome lint .",
    "check:types": "tsc",
    "check:types:watch": "tsc --watch",
    "clean": "del .turbo && del dist && del node_modules",
    "dev": "pkg-utils watch",
    "lint:fix": "biome lint --write .",
    "prepublishOnly": "turbo run build",
    "test": "vitest --run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@cucumber/cucumber-expressions": "^18.1.0",
    "@cucumber/gherkin": "^36.1.0",
    "@cucumber/messages": "^30.1.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@playwright/test": "^1.57.0",
    "@sanity/pkg-utils": "^10.2.1",
    "@sanity/tsconfig": "^2.1.0",
    "typescript": "catalog:",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "@jest/globals": "^30.2.0",
    "@playwright/test": "^1.57.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20.19 <22 || >=22.12"
  },
  "publishConfig": {
    "exports": {
      ".": "./dist/index.js",
      "./jest": "./dist/jest/index.js",
      "./playwright": "./dist/playwright/index.js",
      "./vitest": "./dist/vitest/index.js",
      "./package.json": "./package.json"
    }
  }
}
