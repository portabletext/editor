{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".npmrc", "biome.json", "pnpm-lock.yaml"],
  "tasks": {
    "build": {
      "outputs": ["dist/**", "lib/**"],
      "dependsOn": ["^build"],
      "outputLogs": "new-only"
    },
    "check:types": {
      "outputs": [""],
      "dependsOn": ["^build"],
      "outputLogs": "errors-only"
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "check:lint": {
      "outputLogs": "errors-only"
    },
    "lint:fix": {
      "outputs": [""]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": [""]
    },
    "test:watch": {
      "dependsOn": ["build"],
      "persistent": true,
      "cache": false
    }
  }
}
